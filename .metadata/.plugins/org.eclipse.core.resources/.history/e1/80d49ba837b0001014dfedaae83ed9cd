<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1" %>

<!-- Taglib directive -->
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>

<!-- Page directives -->
<%@ page isELIgnored="false" %>
<%@ page errorPage="error.jsp" %>

<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" 
                      "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
<title>TagLib Directive Example</title>
</head>
<body>

    <%@ include file="Navbar.jsp" %>

    <!-- Set and display age -->
    <c:set var="age" value="25" />
    <p>Your age is: <c:out value="${age}" /></p>

    <!-- Conditional rendering -->
    <c:if test="${age > 18}">
        <h1>You are eligible to vote</h1>
    </c:if>

    <c:if test="${age < 18}">
        <h2>You're not eligible to vote</h2>
    </c:if>

    <!-- Create a list of fruits -->
    <c:set var="fruits" value="${['Apple', 'Mango', 'Banana', 'Papaya', 'Cherry']}" />

    <h3>Fruit List:</h3>
    <ul>
        <c:forEach var="fruit" items="${fruits}">
            <li><c:out value="${fruit}" /></li>
        </c:forEach>
    </ul>

    <!-- Intentional error to trigger error.jsp -->
    <% 
        String name = null;
        name.length(); // This will cause NullPointerException
    %>

    <%@ include file="Footer.jsp" %>

</body>
</html>
